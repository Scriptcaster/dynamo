<%- include("header") -%>
<h1>Item</h1>
<div class="box" id="heading">
  <h1><%= item.number %></h1>
</div>

<div class="box">
  <form class="form-item" action="/" method="post">
  
    <div class="container">
      
      <input type="text" value="<%= item.number %>" name="newNumber" placeholder="Number">
      <input type="text" value="<%= item.date %>" name="newDate" placeholder="Date">
  
    </div>

     <a href="/" target="_blank">Back</a>
     <a href="<%= item.number %>.pdf" target="_blank">Generate</a>
  </form>
      </div>

<%- include("footer") -%>
